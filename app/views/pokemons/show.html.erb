<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-5 text-center">
      <div class="card shadow mb-4" style="border: none; border-radius: 1rem;">
        <div class="card-body">
          <img src="<%= @pokemon.image_url %>" alt="<%= @pokemon.name %>" class="img-fluid mb-3" style="max-width: 200px;">
          <h2 class="fw-bold" style="color: black !important;"><%= @pokemon.name %></h2>
          <p class="text-muted">NÂ°<%= @pokemon.number %></p>
          
          <div class="d-flex justify-content-center gap-2 mb-3">
            <% @pokemon.types.each do |type| %>
              <span class="badge rounded-pill px-3 py-2 mx-1" style="background-color: <%= type.color_code %>; color: black !important;"><%= type.name.upcase %></span>
            <% end %>
          </div>
          
          <div class="d-flex justify-content-between">
            <div>
              <p class="mb-1"><small>Height</small></p>
              <p class="fw-bold"><%= @pokemon.height %> m</p>
            </div>
            <div>
              <p class="mb-1"><small>Weight</small></p>
              <p class="fw-bold"><%= @pokemon.weight %> kg</p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="card shadow mb-4" style="border: none; border-radius: 1rem;">
        <div class="card-body">
          <h4 class="fw-bold mb-4">Evolution</h4>
          <div class="evolution-family d-flex justify-content-center align-items-center">
            <% base_pokemon = get_base_pokemon(@pokemon) %>
            <% evolution_stages = get_all_evolutions(base_pokemon) %>
            
            <% if evolution_stages.length > 1 %>
              <%# Display all evolution stages %>
              <% evolution_stages.each_with_index do |stage, index| %>
                <div class="evolution-branches d-flex flex-wrap justify-content-center gap-4">
                  <% stage.each do |pokemon| %>
                    <div class="evolution-stage text-center">
                      <%= link_to pokemon_path(pokemon) do %>
                        <img src="<%= pokemon.image_url %>" alt="<%= pokemon.name %>" class="img-fluid" style="max-width: 80px;">
                        <p class="mt-2 mb-0 small"><%= pokemon.name %></p>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <% if index < evolution_stages.length - 1 %>
                  <%= image_tag "arrow.png", class: "my-3", style: "width: 20px; height: 20px;" %>
                <% end %>
              <% end %>
            <% else %>
              <p class="text-muted mb-0">Does not evolve</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-7">
      <div class="card shadow mb-4" style="border: none; border-radius: 1rem;">
        <div class="card-body">
          <h3 class="fw-bold mb-3">About</h3>
          <p><%= @pokemon.description %></p>
        </div>
      </div>
      
      <div class="card shadow" style="border: none; border-radius: 1rem;">
        <div class="card-body">
          <h3 class="fw-bold mb-3">Base Stats</h3>
          
          <div class="mb-3">
            <div class="d-flex justify-content-between mb-1">
              <span>HP</span>
              <span><%= @pokemon.hp %></span>
            </div>
            <div class="progress" style="height: 10px;">
              <div class="progress-bar bg-success" role="progressbar" style="width: <%= (@pokemon.hp / 255.0) * 100 %>%" aria-valuenow="<%= @pokemon.hp %>" aria-valuemin="0" aria-valuemax="255"></div>
            </div>
          </div>
          
          <div class="mb-3">
            <div class="d-flex justify-content-between mb-1">
              <span>Attack</span>
              <span><%= @pokemon.atk %></span>
            </div>
            <div class="progress" style="height: 10px;">
              <div class="progress-bar bg-danger" role="progressbar" style="width: <%= (@pokemon.atk / 255.0) * 100 %>%" aria-valuenow="<%= @pokemon.atk %>" aria-valuemin="0" aria-valuemax="255"></div>
            </div>
          </div>
          
          <div class="mb-3">
            <div class="d-flex justify-content-between mb-1">
              <span>Defense</span>
              <span><%= @pokemon.def %></span>
            </div>
            <div class="progress" style="height: 10px;">
              <div class="progress-bar bg-primary" role="progressbar" style="width: <%= (@pokemon.def / 255.0) * 100 %>%" aria-valuenow="<%= @pokemon.def %>" aria-valuemin="0" aria-valuemax="255"></div>
            </div>
          </div>
          
          <div class="mb-3">
            <div class="d-flex justify-content-between mb-1">
              <span>Special Attack</span>
              <span><%= @pokemon.spatk %></span>
            </div>
            <div class="progress" style="height: 10px;">
              <div class="progress-bar bg-warning" role="progressbar" style="width: <%= (@pokemon.spatk / 255.0) * 100 %>%" aria-valuenow="<%= @pokemon.spatk %>" aria-valuemin="0" aria-valuemax="255"></div>
            </div>
          </div>
          
          <div class="mb-3">
            <div class="d-flex justify-content-between mb-1">
              <span>Special Defense</span>
              <span><%= @pokemon.spdef %></span>
            </div>
            <div class="progress" style="height: 10px;">
              <div class="progress-bar bg-info" role="progressbar" style="width: <%= (@pokemon.spdef / 255.0) * 100 %>%" aria-valuenow="<%= @pokemon.spdef %>" aria-valuemin="0" aria-valuemax="255"></div>
            </div>
          </div>
          
          <div class="mb-3">
            <div class="d-flex justify-content-between mb-1">
              <span>Speed</span>
              <span><%= @pokemon.spd %></span>
            </div>
            <div class="progress" style="height: 10px;">
              <div class="progress-bar bg-secondary" role="progressbar" style="width: <%= (@pokemon.spd / 255.0) * 100 %>%" aria-valuenow="<%= @pokemon.spd %>" aria-valuemin="0" aria-valuemax="255"></div>
            </div>
          </div>
          
          <div class="mt-4">
            <div class="d-flex justify-content-between">
              <span>Total</span>
              <span class="fw-bold"><%= @pokemon.tot %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>