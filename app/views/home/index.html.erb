<div class="container py-4">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% @pokemons.each do |pokemon| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body text-center">
            <div class="d-flex justify-content-center mb-3">
              <!-- Placeholder for Pokemon image -->
              <div class="d-flex align-items-center justify-content-center" style="width: 96px; height: 96px;">
                <img src="https://img.pokemondb.net/sprites/x-y/normal/<%= pokemon.name.downcase %>.png" alt="Bulbasaur" style="width: 250px; height: auto;">
              </div>
            </div>
            
            <p class="text-muted mb-1">NÂ°<%= pokemon.number %></p>
            <h5 class="card-title fw-bold mb-3"><%= pokemon.name %></h5>
            
            <div class="d-flex justify-content-center gap-2">
              <!-- Placeholder for type badges -->
              <span class="badge bg-success rounded-pill px-3 py-2">TYPE</span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>