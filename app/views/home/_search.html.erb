<div class="p-4 rounded-4" style="background-color: white;">
  <%= form_with url: search_path, method: :get, class: "d-flex justify-content-center w-100" do |f| %>
      <%= f.text_field :query, 
          class: "form-control form-control-lg me-2", 
          style: "width: 80%; max-width: 800px; padding: 15px; font-size: 1.2rem; border-radius: 25px; background-color: transparent;",
          placeholder: "Search your PokÃ©mon!", 
          "aria-label": "Search" %>
      <%= button_tag type: 'submit', 
          class: "btn btn-lg", 
          style: "background-color: #E8E8E8;",
          onmouseover: "this.style.backgroundColor='#D8D8D8'",
          onmouseout: "this.style.backgroundColor='#E8E8E8'" do %>
        <%= image_tag "whitepokeball-nobg.png", height: 30, alt: "Search" %>
      <% end %>
  <% end %>
</div>